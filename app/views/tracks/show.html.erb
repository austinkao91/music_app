<h1><%= @track.name %> Track</h1>

<table>
  <tr>
    <td>Band Name</td>
    <td>Album Name</td>
  </tr>
  <tr>
    <td><%= link_to @track.band.name, band_url(@track.band) %></td>
    <td><%= link_to @track.album.name, album_url(@track.album) %></td>
  </tr>
</table>

<h3>Lyrics</h3>
<%= ugly_lyrics(@track.lyrics) %>

<%= render "notes/form" %>

<% @track.notes.includes(:track).each do |note| %>
  <%= render "notes/notes", note: note %>
<% end %>


<%= link_to "Edit Track!", edit_track_url(@track) %>
<br>
<%= link_to "Delete Track!", track_url(@track), method: :delete %>
